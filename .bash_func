# mkdir & cd
mkcd() {  
	mkdir -p -- "${1}" && cd "${1}"
}
# cpp
# compile with name
g+++ () {
	if [ $# -lt 1 ]; then
		echo "Input a file!"
		return 1
	fi
	file="$1"
	name="${file%.*}"
	type="${file##*.}"
	build="build/cpp"
	if [ ! -f $file ]; then
		echo "No such file!"
		return 1
	fi
	if [ $file = "cpp" ] || [ ! $type = "cpp" ]; then
		echo "Wrong filetype!"
		return 1
	fi
	if [ ! -f build ]; then
		mkdir -p $build
	fi
	shift 1 
	comments="$@"
	g++ $file -std=c++2a -o ${build}/${name} $comments
	echo "Done!"
	return 0
}
# compile with name & run
grun() {
	file=$1
	name="${file%.*}"
	shift 1
	comments="$@"
	build="build/cpp"
	g+++ $file $comments && clear && ./${build}/${name}
	return 0
}
# all program
Compilerun() {
	file=$1
	type="${file##*.}"
	case $type in
		cpp)
			grun $file
			;;
		py)
			python3 $file
			;;
		*)
			echo "Not supported"
			;;
	esac
}
